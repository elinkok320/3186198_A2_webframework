<Layout title="SpicyLahhh | Blog">

<div id="blog-page">

    <h1>All About Chilli</h1>
    <a href="/blog-posts/new" id="write-blog">Post my Chilli</a>

    {error && <pre>{JSON.stringify(error, null, 2)}</pre>}

  <ul>
       {posts?.map((post) => (
    <li>
      <div class="link-to-content">
         <a href={`/blog-posts/${post.id}`} style="text-decoration:none;color:#fef9c8;">
            <h2>{post.title}</h2>            
            <p class="blog-info">{post.excerpt}</p>
        </a>
      </div>

      <div class="actions">
                <button class="like-btn" data-post-id={post.id}>Spicyyy</button>
                
                <button class="delete-btn" data-post-id={post.id} data-user-id={post.user_id} style="display:none;">Plain</button>
        </div>

      <div class="title-content">
        <p class="blog-date" style="font-family: KatalesBroken;">By Chilli Padi {new Date(post.created_at).toLocaleDateString()} </p>
      </div>

      </li>
  ))}
  </ul>
</div>

